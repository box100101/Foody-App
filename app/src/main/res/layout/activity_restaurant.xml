<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_primary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Back"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_back_2_24"
            android:drawableTint="@color/white"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@drawable/pizza_2"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/shop_pizza"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_name_of_restaurant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza hut"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="casual"
                            android:textSize="25dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thủ Đức - Tp.Hồ Chí Minh"
                            android:textColor="@color/gray_2"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/txt_descr_restaurant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Nơi bạn có thể ăn các loại mì Ý và pizza"/>


                <FrameLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:background="@color/white_4"/>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List dishes of the restaurant"
                    android:textAllCaps="true"
                    android:layout_gravity="center_horizontal"
                    android:textSize="16dp"
                    android:textColor="@color/pink"/>


                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:background="@color/white_5">

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pizza_1"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pizza phô mai hải sản"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            android:textSize="16dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="$5.5"
                            android:textColor="@color/pink"
                            android:textSize="25dp"
                            android:gravity="bottom"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:background="@color/white_5">

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pizza_1"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pizza phô mai hải sản"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            android:textSize="16dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="$5.5"
                            android:textColor="@color/pink"
                            android:textSize="25dp"
                            android:gravity="bottom"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:background="@color/white_5">

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pizza_1"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pizza phô mai hải sản"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            android:textSize="16dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="$5.5"
                            android:textColor="@color/pink"
                            android:textSize="25dp"
                            android:gravity="bottom"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:background="@color/white_5">

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pizza_1"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pizza phô mai hải sản"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            android:textSize="16dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="$5.5"
                            android:textColor="@color/pink"
                            android:textSize="25dp"
                            android:gravity="bottom"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>