<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_primary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_back_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Back"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_back_2_24"
                android:drawableTint="@color/white"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <EditText
            android:background="@drawable/border_radius"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="50dp"
            android:drawableStart="@drawable/ic_search"
            android:paddingStart="10dp"
            android:maxLines="1"
            android:inputType="text"
            android:hint="Search..."/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="10dp"
                    android:layout_gravity="center_vertical">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/pizza_1"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1.5">

                    <TextView
                        android:id="@+id/txt_name_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pizza phô mai hải sản"
                        android:fontFamily="serif"
                        android:textColor="@color/red"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/txt_descr_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pizza is a flat, round cake made from flour and yeast "/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Thủ Đức-Tp.Hồ Chí Minh"
                        android:textColor="@color/gray_2"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="$5.5"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/pink"
                    android:layout_weight="3.5"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>